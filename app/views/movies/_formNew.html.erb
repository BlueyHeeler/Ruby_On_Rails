<%= form_with(model: movie, url: movies_path, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="movies-container">
    <div class="movie-form">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, name: "movies[][name]" %>

      <%= form.label :release_date, style: "display: block" %>
      <%= form.date_field :release_date, name: "movies[][release_date]" %>

      <%= form.label :rating, style: "display: block" %>
      <%= form.number_field :rating, name: "movies[][rating]" %>

      <%= form.label :description, style: "display: block" %>
      <%= form.textarea :description, name: "movies[][description]" %>
    </div>
  </div>

  <div>
    <button type="button" id="add-movie-btn">Add Another Movie</button>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
