<div id="carouselExample" class="carousel slide mx-auto" style="max-width: 270px; max-height: 400px">
  <div class="carousel-inner">
    <% movies&.each_with_index do |movie, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <% if movie.poster_image.present? %>
          <%= image_tag movie.poster_image, class: 'd-block w-100', alt: movie.name, style: 'max-width: 270px; max-height: 400px' %>
        <% else %>
          <%= image_tag 'gato_horroroso.png', class: 'd-block w-100', alt: 'Imagem não disponível', style: 'max-width: 270px; max-height: 400px' %>
          <p>Filme sem imagem.</p>
        <% end %>
        <p><%= movie.name %></p>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
